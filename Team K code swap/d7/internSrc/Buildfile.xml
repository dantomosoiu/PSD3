<project name="internMgtK" default="dist" basedir=".">
	<description>
		Build for Intern Management System
	</description>
	<property name="src" location="src"/>
	<property name="build" location="build"/>
	<property name="dist" location="dist"/>
	
	<target name="init">
		<!-- Create time stamp -->
		<tstamp/>
		<!-- Create the build dir structure used by compile -->
		<mkdir dir="${build}"/>
	</target>
	
	<!-- Build Class Files -->
	<target name="compile" depends="init"
			description="compile the source" >
		<!-- Compile java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}"/>
	</target>
	
	<target name="dist" depends="compile"
			description="generate the distribution" >
			<!-- Create the distro dir -->
			<mkdir dir="${dist}/lib"/>
			
			<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
			<manifest>
			<attribute name="Main-Class"
             value="uk.ac.glasgow.internman.ui.InternManCLUI" />
			
			<jar jarfile="${dist}/lib/internMgtK-${DSTAMP}.jar" basedir="${build}"/>
	</target>
	
	<target name="copyRun" depends="dist"
			description="copy jars and run bashScript">
			
	
	<target name="clean"
			description="clean up" >
			
			<delete dir="${build}"/>
			<delete dir="${dist}"/>
	</target> 
</project>
